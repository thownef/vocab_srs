generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// NextAuth required models
model Account {
  id                String  @id @default(cuid())
  userId            Int     @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       Int      @map("user_id")
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model User {
  id            Int       @id @default(autoincrement())
  name          String?
  email         String    @unique
  emailVerified DateTime? @map("email_verified")
  password      String?
  image         String?
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")

  accounts        Account[]
  sessions        Session[]
  vocabularies    Vocabulary[]
  learningStates  LearningState[]
  reviewHistories ReviewHistory[]

  @@map("users")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// Application models
model Vocabulary {
  id              Int      @id @default(autoincrement())
  userId          Int      @map("user_id")
  word            String
  meaning         String   @db.Text
  pronunciation   String?
  exampleSentence String?  @map("example_sentence") @db.Text
  imageUrl        String?  @map("image_url")
  audioUrl        String?  @map("audio_url")
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")

  user            User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  learningState   LearningState?
  reviewHistories ReviewHistory[]

  @@index([userId])
  @@map("vocabulary")
}

model LearningState {
  id           Int      @id @default(autoincrement())
  vocabularyId Int      @unique @map("vocabulary_id")
  userId       Int      @map("user_id")
  level        Int      @default(0)
  nextReviewAt DateTime @map("next_review_at")
  inRecovery   Boolean  @default(false) @map("in_recovery")
  isCompleted  Boolean  @default(false) @map("is_completed")
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  vocabulary Vocabulary @relation(fields: [vocabularyId], references: [id], onDelete: Cascade)
  user       User       @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, nextReviewAt])
  @@index([userId, isCompleted])
  @@map("learning_state")
}

model ReviewHistory {
  id           Int      @id @default(autoincrement())
  vocabularyId Int      @map("vocabulary_id")
  userId       Int      @map("user_id")
  level        Int
  remembered   Boolean
  reviewedAt   DateTime @default(now()) @map("reviewed_at")

  vocabulary Vocabulary @relation(fields: [vocabularyId], references: [id], onDelete: Cascade)
  user       User       @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, reviewedAt])
  @@map("review_history")
}
